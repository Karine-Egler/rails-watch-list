<div class="banner"
style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
url('<%= cl_image_path "l5z6m1xsgoq1qirqfjwr"  , height: 300, crop: :fill %>')">
<div class="container">
    <h1>Save any kind of movies </h1>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <ul>
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
       <div class="card-category">
          <li><%= list.name %></li>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

